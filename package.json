{
  "name": "sanityblocks",
  "version": "1.1.1",
  "description": "SanityBlocks: Next.js + Sanity + shadcnblocks.com",
  "scripts": {
    "dev": "pnpm --parallel -r run dev",
    "dev:next": "pnpm run dev --workspace=frontend",
    "dev:studio": "pnpm run dev --workspace=studio",
    "typegen": "cd studio && pnpm typegen",
    "typecheck": "cd frontend && pnpm typecheck",
    "typecheck:all": "pnpm -r run typecheck",
    "prelint": "pnpm run typecheck:all",
    "export": "cd studio && sanity dataset export production sample-data.tar.gz",
    "prepare": "husky",
    "test": "cd frontend && pnpm test:coverage",
    "lint": "cd frontend && pnpm lint",
    "prelint:ci": "pnpm run typecheck:all",
    "lint:ci": "cd frontend && pnpm lint:ci"
  },
  "homepage": "https://largseeds.nl/",
  "devDependencies": {
    "@sanity/client": "^7.9.0",
    "@types/node": "^24.3.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "p-limit": "^7.1.1",
    "tsx": "^4.19.2"
  },
  "pnpm": {
    "overrides": {
      "prismjs": "^1.30.0"
    }
  },
  "lint-staged": {
    "frontend/**/*.{ts,tsx,js,jsx}": [
      "pnpm --filter frontend exec eslint --max-warnings=0 --cache --fix"
    ]
  }
}
